<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMWhiteBone"
    >

    <LinearLayout
        android:id="@+id/list_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rectangle_rounded"
        android:layout_margin="@dimen/m10dp"
        android:layout_above="@+id/menu_layout"
        ></LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMOrange"
        android:elevation="@dimen/m5dp"
        android:minHeight="?attr/actionBarSize"
        app:tabIndicatorColor="@color/colorMWhite"
        >


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/menu_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menu_layout"
        >

    </android.support.v4.view.ViewPager>


</RelativeLayout>